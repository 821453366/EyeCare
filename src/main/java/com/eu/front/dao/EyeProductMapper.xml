<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eu.fort.dao.EyeProductDao">
    <!-- EyeProduct的resultMap,column是给数据库列起的别名,它对应property类的属性-->
    <resultMap id="result_EyeProduct_Map" type="com.eu.fort.entity.EyeProduct">
        <id column="pro_id" property="proId" />
        <result column="pro_oprice" property="proOprice" />
        <result column="pro_nprice" property="proNprice" />
        <result column="pro_amount" property="proAmount" />
        <result column="category_id" property="categoryId" />
        <result column="pro_state" property="proState" />
        <result column="pro_type" property="proType" />
        <result column="pro_img" property="proImg" />
    </resultMap>

    <!-- 数据库中表名为:eye_product的列名,as前是数据库的列明,as后是列的别名用于映射成实体类中的属性,需要注意的是别名必须与resultMap中的column别名一致 -->
    <sql id="eye_product_Column">
        eye_product.pro_id as pro_id
        ,eye_product.pro_oprice as pro_oprice
        ,eye_product.pro_nprice as pro_nprice
        ,eye_product.pro_amount as pro_amount
        ,eye_product.category_id as category_id
        ,eye_product.pro_state as pro_state
        ,eye_product.pro_type as pro_type
        ,eye_product.pro_img as pro_img
    </sql>

    <!--获得类名为:EyeProduct对应的数据库表的数据总行数 -->
    <select id="getEyeProductRowCount" resultType="java.lang.Long">
        select count(pro_id) from eye_product
    </select>
    <!-- 获得类名为:EyeProduct对应数据库中表的数据集合 -->
    <select id="selectEyeProduct" resultMap="result_EyeProduct_Map">
        select 
        <include refid="eye_product_Column" /> 
        from eye_product
    </select> 

    <!-- 获得一个EyeProduct对象,以参数EyeProduct对象中不为空的属性作为条件进行查询-->
    <select id="selectEyeProductByObj" parameterType="com.eu.fort.entity.EyeProduct" resultMap="result_EyeProduct_Map">
        select 
            <include refid="eye_product_Column" /> 
        from eye_product
        <where>
            <if test="proImg != null "> and eye_product.pro_img = #{proImg}</if>
            <if test="proType != null "> and eye_product.pro_type = #{proType}</if>
            <if test="proState != null "> and eye_product.pro_state = #{proState}</if>
            <if test="categoryId != null "> and eye_product.category_id = #{categoryId}</if>
            <if test="proAmount != null "> and eye_product.pro_amount = #{proAmount}</if>
            <if test="proNprice != null "> and eye_product.pro_nprice = #{proNprice}</if>
            <if test="proOprice != null "> and eye_product.pro_oprice = #{proOprice}</if>
            <if test="proId != null "> and eye_product.pro_id = #{proId}</if>
        </where>
    </select> 

    <!-- 通过EyeProduct的id获得对应数据库中表的数据对象-->
    <select id="selectEyeProductById" parameterType="java.lang.Integer" resultMap="result_EyeProduct_Map">
        select 
            <include refid="eye_product_Column" /> 
        from eye_product
        where eye_product.pro_id = #{id}
    </select> 

    <!-- 将EyeProduct插入到对应数据库的表中,包括属性值为null的数据-->

    <insert id="insertEyeProduct" parameterType="com.eu.fort.entity.EyeProduct">
        insert into eye_product(pro_id,pro_oprice,pro_nprice,pro_amount,category_id,pro_state,pro_type,pro_img) 
        values(#{proId},#{proOprice},#{proNprice},#{proAmount},#{categoryId},#{proState},#{proType},#{proImg})
    </insert>

    <!-- 将EyeProduct中属性值不为null的数据,插入到对应数据库的表中-->
    <insert id="insertNonEmptyEyeProduct" parameterType="com.eu.fort.entity.EyeProduct">
        insert into eye_product
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="proId != null">pro_id,</if>
            <if test="proOprice != null">pro_oprice,</if>
            <if test="proNprice != null">pro_nprice,</if>
            <if test="proAmount != null">pro_amount,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="proState != null">pro_state,</if>
            <if test="proType != null">pro_type,</if>
            <if test="proImg != null">pro_img,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="proId != null"> #{proId},</if>
            <if test="proOprice != null"> #{proOprice},</if>
            <if test="proNprice != null"> #{proNprice},</if>
            <if test="proAmount != null"> #{proAmount},</if>
            <if test="categoryId != null"> #{categoryId},</if>
            <if test="proState != null"> #{proState},</if>
            <if test="proType != null"> #{proType},</if>
            <if test="proImg != null"> #{proImg},</if>
        </trim>
    </insert>

    <!-- 通过EyeProduct的id将数据库表中对应的数据删除-->
    <delete id="deleteEyeProductById" parameterType="java.lang.Integer">
        delete from eye_product
        where pro_id = #{id}
    </delete>

    <!-- 通过EyeProduct的id将EyeProduct的数据更新到数据库中对应的表,包括值null的数据-->
    <update id="updateEyeProductById" parameterType="com.eu.fort.entity.EyeProduct">
        update eye_product set
            pro_oprice=#{proOprice}
            ,pro_nprice=#{proNprice}
            ,pro_amount=#{proAmount}
            ,category_id=#{categoryId}
            ,pro_state=#{proState}
            ,pro_type=#{proType}
            ,pro_img=#{proImg}
        where pro_id=#{proId}
    </update>

    <!-- 通过EyeProduct的id将EyeProduct中属性值不为null的数据更新到数据库对应的表中-->
    <update id="updateNonEmptyEyeProductById" parameterType="com.eu.fort.entity.EyeProduct">
        update eye_product
        <set>
            <if test="proOprice != null">
                pro_oprice=#{proOprice},
            </if>
            <if test="proNprice != null">
                pro_nprice=#{proNprice},
            </if>
            <if test="proAmount != null">
                pro_amount=#{proAmount},
            </if>
            <if test="categoryId != null">
                category_id=#{categoryId},
            </if>
            <if test="proState != null">
                pro_state=#{proState},
            </if>
            <if test="proType != null">
                pro_type=#{proType},
            </if>
            <if test="proImg != null">
                pro_img=#{proImg},
            </if>
        </set>
        where pro_id=#{proId}
    </update>

</mapper>