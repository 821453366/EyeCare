<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eu.fort.dao.RevisitDao">
    <!-- Revisit的resultMap,column是给数据库列起的别名,它对应property类的属性-->
    <resultMap id="result_Revisit_Map" type="com.eu.fort.entity.Revisit">
        <result column="re_id" property="reId" />
        <result column="emp_id" property="empId" />
        <result column="order_id" property="orderId" />
        <result column="re_count" property="reCount" />
        <result column="re_info" property="reInfo" />
        <result column="re_time" property="reTime" />
        <result column="order_desc" property="orderDesc" />
    </resultMap>

    <!-- 数据库中表名为:revisit的列名,as前是数据库的列明,as后是列的别名用于映射成实体类中的属性,需要注意的是别名必须与resultMap中的column别名一致 -->
    <sql id="revisit_Column">
        revisit.re_id as re_id
        ,revisit.emp_id as emp_id
        ,revisit.order_id as order_id
        ,revisit.re_count as re_count
        ,revisit.re_info as re_info
        ,revisit.re_time as re_time
        ,revisit.order_desc as order_desc
    </sql>

    <!--获得类名为:Revisit对应的数据库表的数据总行数 -->
    <select id="getRevisitRowCount" resultType="java.lang.Long">
        select count(*) from revisit
    </select>
    <!-- 获得类名为:Revisit对应数据库中表的数据集合 -->
    <select id="selectRevisit" resultMap="result_Revisit_Map">
        select 
        <include refid="revisit_Column" /> 
        from revisit
    </select> 

    <!-- 将Revisit插入到对应数据库的表中,包括属性值为null的数据-->

    <insert id="insertRevisit" parameterType="com.eu.fort.entity.Revisit">
        insert into revisit(re_id,emp_id,order_id,re_count,re_info,re_time,order_desc) 
        values(#{reId},#{empId},#{orderId},#{reCount},#{reInfo},#{reTime},#{orderDesc})
    </insert>

    <!-- 将Revisit中属性值不为null的数据,插入到对应数据库的表中-->
    <insert id="insertNonEmptyRevisit" parameterType="com.eu.fort.entity.Revisit">
        insert into revisit
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="reId != null">re_id,</if>
            <if test="empId != null">emp_id,</if>
            <if test="orderId != null">order_id,</if>
            <if test="reCount != null">re_count,</if>
            <if test="reInfo != null">re_info,</if>
            <if test="reTime != null">re_time,</if>
            <if test="orderDesc != null">order_desc,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="reId != null"> #{reId},</if>
            <if test="empId != null"> #{empId},</if>
            <if test="orderId != null"> #{orderId},</if>
            <if test="reCount != null"> #{reCount},</if>
            <if test="reInfo != null"> #{reInfo},</if>
            <if test="reTime != null"> #{reTime},</if>
            <if test="orderDesc != null"> #{orderDesc},</if>
        </trim>
    </insert>

</mapper>