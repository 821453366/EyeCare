<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eu.eyecare.dao.UserDao">

    <select id="queryUser" resultType="map">
        SELECT * FROM eye_emp where emp_name like #{empName} order by id DESC  LIMIT #{start}, #{end}
    </select>

    <select id="queryUserCount" resultType="long">
        SELECT count(1)
        FROM eye_emp
    </select>
    <update id="addUser" parameterType="EyeEmp">
        INSERT INTO eye_emp(emp_name,emp_password,emp_phone,emp_state,emp_img,emp_sex,emp_time,emp_desc)
        VALUES (#{empName},#{empPassword},#{empPhone},#{empState},#{empImg},#{empSex},#{empTime},#{empDesc})
    </update>
    <delete id="deleteUser" parameterType="string">
        delete  from eye_emp where id =#{empId}
    </delete>
    <select id="findById" parameterType="int" resultType="EyeEmp">
        SELECT * from eye_emp where emp_id=#{empId}
    </select>
